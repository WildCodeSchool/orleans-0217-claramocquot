        {#=================== Caroussel LG MD SM=======================#}

        <div class="row hidden-xs">
            <div class="col-xs-10 col-xs-offset-1">
                <div id="nouveaux_chapeaux" class="carousel slide" data-ride="carousel" data-interval="3500">
                    <!-- Indicators -->
                    <ol class="carousel-indicators">
                        {% for new in news if news|length>3 %}
                            {% if loop.first or loop.index0%3 == 0 %}
                                <li data-target="#nouveaux_chapeaux" data-slide-to="{{ loop.index0/3 }}"
                                        {% if loop.first %} class="active"{% endif %}></li>
                            {% endif %}
                        {% endfor %}
                    </ol>

                    <!-- Wrapper for slides -->
                    <div class="carousel-inner" role="listbox">
                        {% for new in news %}
                            {% if loop.first or loop.index0%3 == 0 %}
                                <div class="item row{% if loop.first %} active{% endif %}">
                            {% endif %}
                            <a href="/chapeau/{{ new.id }}">
                                <div class="col-xs-4">
                                    <div class="thumbnailSlider marginCollections">
                                        <img class="thumbnail"
                                             src="../../img/upload/{{ new.image }}"
                                             alt="{{ new.image }}">
                                        <h3 class="titre_photo">{{ new.name }} </h3>
                                        <div class="text-right price">{{ new.price }} €</div>
                                    </div>
                                </div>
                            </a>
                            {% if loop.last or loop.index0%3 == 2 %}
                                </div>
                            {% endif %}
                        {% endfor %}
                    </div>
                </div>
                {% if news|length > 3 %}
                    <!-- Controls -->
                    <a class="left carousel-control" href="#nouveaux_chapeaux" role="button" data-slide="prev">
                        {#<span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>#}
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="right carousel-control" href="#nouveaux_chapeaux" role="button" data-slide="next">
                        {#<span class="glyphicon glyphicon-chevron/-right" aria-hidden="true"></span>#}
                        <span class="sr-only">Next</span>
                    </a>
                {% endif %}
            </div>
        </div>

