{% extends "base.html.twig" %}
{% block title %}Collection{% endblock %}

{% block content %}
    <div class="container-fluid">

    <div class="row page_collec">
        <div class="col-md-10 col-md-offset-1">
            <div class="row">
                <div class="col-md-4 col-md-offset-4 text-center titreCollections">
                    <h1 class="titreCadre2">Nos Chapeaux</h1>
                </div>
            </div>


            <div class="row">
                {% for data in datas %}
                    {% if data.newProd == 1 %}
                        <div class="col-xs-12 col-md-4">
                            <a href="index.php?route=produit">
                                <div class="thumbnailSlider marginCollections">
                                    <img class="thumbnail"
                                         src="../img/upload/{{ data.image }}" alt="{{ data.image }}">
                                    <h3 class="titre_photo">{{ data.name }} </h3>
                                    <div class="text-right price">{{ data.price }} €</div>
                                </div>
                            </a>
                        </div>
                    {% endif %}
                    {% if data.product == 1 %}
                        <div class="col-xs-12 col-md-4">
                            <a href="index.php?route=produit">
                                <div class="thumbnailSlider marginCollections">
                                    <img class="thumbnail"
                                         src="../img/upload/{{ data.image }}" alt="{{ data.image }}">
                                    <h3 class="titre_photo">{{ data.name }} </h3>
                                    <div class="text-right price">{{ data.price }} €</div>
                                </div>
                            </a>
                        </div>
                    {% endif %}
                    {% if data.unavailable ==1 %}
                        <div class="col-xs-12 col-md-4 gris">
                            <a href="index.php?route=produit" title="Produit actuellement indisponible"
                               data-toggle="tooltip"
                               data-delay="delay: {show: 10, hide: 10}">
                                <div class="thumbnailSlider marginCollections">
                                    <img class="thumbnail"
                                         src="../img/upload/{{ data.image }}" alt="{{ data.image }}">
                                    <h3 class="titre_photo">{{ data.name }} </h3>
                                    <div class="text-right price">{{ data.price }} €</div>
                                </div>
                            </a>
                        </div>
                    {% endif %}
                {% endfor %}
            </div>
        </div>
    </div>

    <section class="container-fluid landingPageNouveautes text-center">
        <div class="section_overlay2">
            <div class="row">
                <div class="col-md-offset-5 col-md-2">
                    <h2 class="titreCadre2">ANCIENNES COLLECTIONS</h2>
                </div>
            </div>

            <div class="row">
                <div class="col-md-10 col-md-offset-1">
                    <div id="anciens_chapeaux" class="carousel slide" data-ride="carousel">
                        <!-- Indicators -->
                        <ol class="carousel-indicators">
                            {% for old in olds if olds|length>3 %}
                                {% if loop.first or loop.index0%3 == 0 %}
                                    <li data-target="#anciens_chapeaux" data-slide-to="{{ loop.index0/3 }}"
                                            {% if loop.first %} class="active"{% endif %}></li>
                                {% endif %}
                            {% endfor %}
                        </ol>

                        <!-- Wrapper for slides -->
                        <div class="carousel-inner" role="listbox">
                            {% for old in olds %}
                                {% if loop.first or loop.index0%3 == 0 %}
                                    <div class="item row{% if loop.first %} active{% endif %}">
                                {% endif %}
                                <a href="index.php?route=produit&id={{ old.id }}">
                                    <div class="col-xs-12 col-md-4">
                                        <div class="thumbnailSlider marginCollections">
                                            <img class="thumbnail"
                                                 src="img/upload/{{ old.image }}"
                                                 alt="{{ old.image }}">
                                            <h3 class="titre_photo">{{ old.name }} </h3>
                                            <div class="text-right price">{{ old.price }} €</div>
                                        </div>
                                    </div>
                                </a>
                                {% if loop.last or loop.index0%3 == 2 %}
                                    </div>
                                {% endif %}
                            {% endfor %}
                        </div>
                    </div>
                    {% if olds|length > 3 %}
                        <!-- Controls -->
                        <a class="left carousel-control" href="#anciens_chapeaux" role="button" data-slide="prev">
                            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="right carousel-control" href="#anciens_chapeaux" role="button" data-slide="next">
                            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    {% endif %}
                </div>
            </div>
        </div>
    </section>
    </div>



{% endblock %}