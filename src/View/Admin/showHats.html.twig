{% extends "homeAdmin.html.twig" %}

{% block content %}
    <div class="container-fluid text-center">
        <div class="row">
            <div class="col-xs-10 col-xs-offset-1">
                <h1 class="borderBlack">Liste des chapeaux</h1><br/>
                {% if res is not empty %}
                    <blockquote class="btn-success">{{ res }}</blockquote><br/>
                {% endif %}
                <div class="row">
                    <div class="col-sm-4 col-xs-12">
                        <a href="index.php?route=nouveau-chapeau">
                            <div class="thumbnailSlider marginCollections">
                                <img class="thumbnail addPadd" src="../img/logos/add.png" alt="ajouter-article"><hr/>
                                <h3 class="titre_photo">Ajouter un nouveau chapeau</h3><br/>
                            </div>
                        </a>
                    </div>

                    {% for data in datas %}
                        {% if loop.first or data.name != datas[index0]-1 %}
                            <div class="col-sm-4 col-xs-12">
                                <a href="index.php?route=chapeau&id={{ data.id }}">
                                    <div class="thumbnailSlider marginCollections">
                                        <img class="thumbnail" src="../img/upload/{{ data.image }}" alt="{{ data.image }}">
                                        <h3 class="titre_photo">{{ data.name }} </h3>
                                        <div class="text-right price">{{ data.price }} â‚¬</div>
                                    </div>
                                </a>
                            </div>
                        {% endif %}
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

