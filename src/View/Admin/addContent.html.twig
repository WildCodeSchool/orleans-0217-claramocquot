{% extends "homeAdmin.html.twig" %}

{% block content %}
    {{ form.prepare() }}

    <h1>Ajouter un article</h1>


    <form name="formAddContent" method="post">
        <input type="text" name="title" value="{{ form.get('title').getValue() }}"/>
        {% for name, message in form.getMessages() %}
            {% if  'title' == name %}
                <p>{{ message }} !!</p>
            {% endif %}
        {% endfor %}

        <input type="hidden" name="csrf" value="{{ form.get('csrf').getValue() }}"/>
        <input type="submit" name="Ajouter" value="Ajouter"/>
    </form>


