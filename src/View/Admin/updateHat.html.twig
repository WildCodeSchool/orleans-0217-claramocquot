{% extends "homeAdmin.html.twig" %}

{% block content %}

    <div class="container text-center">
        <h1>Modifier un article : {#{{ update }}#}</h1><hr/>
        {% if result is not empty %}
            <blockquote class="btn-success">{{ result }}</blockquote><br/>
        {% endif %}
        {% if noResult is not empty %}
            <blockquote class="btn-danger">{#{{ noResult }}#}</blockquote><br/>
        {% endif %}

        {{ form.render|raw }}
    </div>
{% endblock %}