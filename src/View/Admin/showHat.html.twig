{% extends "homeAdmin.html.twig" %}
{% block title %}{{ hat.name }}{% endblock %}

{% block content %}
    <div class="container-fluid containerProduit">
        <div class="row">
            <div class="col-xs-5 sliderProduit">
                <div class="row">
                    <div id="chapeau" class=" col-xs-10 col-xs-offset-1 carousel slide"
                         data-ride="carousel">
                        <!-- Indicators -->
                        <ol class="carousel-indicators">
                            {% set index=0 %}
                            {% for hat in hats %}
                                <li data-target="#chapeau" data-slide-to="{{ index }}"
                                    class="{% if index==0 %}active {% endif %}"></li>
                                {% set index = index +1 %}
                            {% endfor %}
                        </ol>
                        <!-- Wrapper for slides -->
                        <div class="row">
                            <div class="col-xs-10 col-xs-offset-1">
                                <div class="carousel-inner" role="listbox">
                                    {% set index=0 %}
                                    {% for hat in hats %}

                                        <div class="item {% if index == 0 %}active{% endif %}">
                                            <img src="../img/upload/{{ hat.image }}" alt="{{ hat.image }}"
                                                 class="borderBlackNav imageCarProd">
                                        </div>
                                        {% set index = index +1 %}
                                    {% endfor %}
                                </div>
                            </div>
                        </div>

                        <!-- Controls -->
                        <a class="left carousel-control" href="#chapeau" role="button"
                           data-slide="prev">
                            {#<span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>#}
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="right carousel-control" href="#chapeau" role="button"
                           data-slide="next">
                            {#<span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>#}
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                </div>
            </div>

            <div class="col-xs-5 col-xs-offset-1 produitDescriptionAdmin">

                <a href="index.php?route=chapeaux"><p class="text-left returnList"><span
                                class="fa fa-angle-double-left"></span>
                        retour à la
                        liste</p></a><br/>

                <h1 class="titleProduit">{{ hats[0].name|raw }}</h1>


                <p><span class="DescProduit">Description:</span><br/>{{ hats[0].content|raw }}</p>

                <p>
                    <span class="DescProduit"> Prix:</span> {% if hats[0].unavailable ==1 %}Produit indisponible {% elseif hats[0].old==1 %}  Indisponible{% else %}{{ hats[0].price }}€{% endif %}
                </p>
                <a href="index.php?route=modif-chapeau&id={{ hats[0].id }}" role="button" class="btn btn-primary">Modifier</a>
                <a href="index.php?route=supp-chapeau&id={{ hats[0].id }}" role="button" class="btn btn-danger">Supprimer</a>
            </div>
        </div>
    </div>

{% endblock %}